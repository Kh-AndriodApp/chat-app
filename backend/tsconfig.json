{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",                      
    "paths": {
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@prisma-sys-client": ["database/prisma/app/generated/prisma/client"],
      "@chat-app/validators/*": ["../shared/src/validators/*"]
    }
  },
  "include": ["src/**/*", "database/prisma/**/*"],
   "references": [
    { "path": "../shared" }
  ]
}
